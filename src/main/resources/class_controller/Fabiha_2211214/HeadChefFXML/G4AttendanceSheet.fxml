<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<!-- Controller is set for Manpower/Attendance Management -->

<AnchorPane prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="class_controller.Fabiha_2211214.HeadChef.AttendanceController">

    <children>
        <!-- Screen Title -->
        <Label layoutX="220.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Worker Attendance Management" />

        <!-- Selection / Filtering Options (event-5) -->
        <Label layoutX="25.0" layoutY="65.0" style="-fx-font-weight: bold;" text="Select Attendance Data:" />

        <ComboBox fx:id="durationComboBox" layoutX="25.0" layoutY="90.0" prefWidth="150" promptText="Duration" />
        <TextField fx:id="employeeSearchTextField" layoutX="195.0" layoutY="90.0" prefWidth="200" promptText="Employee Name or ID" />
        <TextField fx:id="lineSearchTextField" layoutX="415.0" layoutY="90.0" prefWidth="150" promptText="Particular Line" />

        <!-- Fetch/View Button (event-6) -->
        <Button layoutX="576.0" layoutY="90.0" onAction="#handleFetchAttendanceONA" prefWidth="110" text="View Sheet" />

        <!-- Attendance Sheet Table View (event-7) -->
        <Label layoutX="25.0" layoutY="140.0" style="-fx-font-weight: bold;" text="Attendance Sheet" />
        <TableView fx:id="attendanceTableView" layoutX="15.0" layoutY="166.0" prefHeight="350" prefWidth="677.0">
            <columns>
                <TableColumn fx:id="workerNameColumn" prefWidth="180.0" text="Worker Name" />
                <TableColumn fx:id="employeeIdColumn" prefWidth="100.0" text="Employee ID" />
                <TableColumn fx:id="workLineColumn" prefWidth="120.0" text="Work" />
                <!-- Attendance status: Present, Late, On Leave, Absent -->
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="dateColumn" prefWidth="170.0" text="Date / Timestamp" />
            </columns>
        </TableView>

        <!-- Status Label -->
        <Label fx:id="statusLabel" layoutX="25.0" layoutY="527.0" prefHeight="17.0" prefWidth="250.0" text="Showing data for all employees." />

    </children>
</AnchorPane>
