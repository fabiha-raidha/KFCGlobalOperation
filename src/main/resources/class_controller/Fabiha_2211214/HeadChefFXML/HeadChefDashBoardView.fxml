<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="877.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="class_controller.Fabiha_2211214.HeadChef.HeadChefDashboardController">

    <!-- 1. Left Menu Panel (AnchorPane for Navigation/Sidebar) -->
    <AnchorPane fx:id="menuPane" layoutY="-26.0" prefHeight="625.0" prefWidth="240.0" style="-fx-background-color: #2c3e50;">
        <children>
            <Label layoutX="41.0" layoutY="49.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Head Chef Menu" />
            <Button layoutX="20.0" layoutY="100.0" onAction="#overviewONA" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" text="Dashboard Overview" />

            <!-- Goal-1: Recipe/Menu Creation and Modification -->
            <Button layoutX="20.0" layoutY="150.0" onAction="#recipeMenuONA" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" text="Recipe &amp; Menu" />

            <!-- Goal-2: Inventory Supervision/ Management -->
            <Button layoutX="20.0" layoutY="200.0" onAction="#inventoryONA" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" text="Inventory Management" />

            <!-- Goal-3: Quality Control and Compliance Checks -->
            <Button layoutX="20.0" layoutY="250.0" onAction="#qualityControlONA" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" text="Quality Control" />

            <!-- Goal-4: Attendance Management -->
            <Button layoutX="20.0" layoutY="300.0" onAction="#attendanceONA" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" text="Attendance" />

            <!-- Other Menu Items from original dashboard -->
            <Button layoutX="20.0" layoutY="350.0" onAction="#lineManagementONA" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" text="Line Management" />
            <Button layoutX="20.0" layoutY="400.0" onAction="#staffONA" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" text="Staff Management" />
            <Button layoutX="20.0" layoutY="450.0" onAction="#ordersONA" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14px;" text="Orders" />

            <!-- Log Out Button -->
            <Button layoutX="20.0" layoutY="548.0" onAction="#logoutONA" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Log Out" />
        </children>
    </AnchorPane>

    <!-- 2. Right Content Panel (Dynamic Content Area) -->
    <!-- Anchor is set relative to the menu pane (240px wide) -->
    <AnchorPane fx:id="contentPane" layoutX="240.0" prefHeight="599.0" prefWidth="637.0" style="-fx-background-color: #ecf0f1;">
        <children>
            <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Welcome to the Head Chef Dashboard" />
            <Label layoutX="20.0" layoutY="60.0" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" text="Select an option from the left menu to view details and manage operations." />
        </children>
    </AnchorPane>

</AnchorPane>
